{
	"name": "@nao/backend",
	"type": "module",
	"exports": {
		"./trpc": "./src/trpc/router.ts",
		"./chat": "./src/types/chat.ts",
		"./usage": "./src/types/usage.ts",
		"./llm": "./src/types/llm.ts",
		"./saved-prompts": "./src/types/saved-prompt.ts",
		"./tools": "./src/agents/tools/index.ts",
		"./providers": "./src/agents/providers.ts"
	},
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"fastapi": "cd ../../cli && uv run ../apps/backend/fastapi/main.py",
		"build": "tsup src/index.ts --format esm --target node20 --minify",
		"build:standalone": "bun build src/cli.ts --compile --outfile nao-chat-server",
		"start": "node dist/index.js",
		"test": "vitest run",
		"lint": "tsc --noEmit && eslint",
		"lint:fix": "eslint --fix",
		"db:generate": "bash scripts/db.generate.sh",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:pull": "drizzle-kit pull",
		"db:studio": "drizzle-kit studio",
		"db:drop": "drizzle-kit drop",
		"db:reset": "rm db.sqlite",
		"db:seed": "bun scripts/db.seed.ts",
		"db:check-migrations": "bun scripts/db.check-migrations.ts",
		"format": "prettier --write .",
		"test:tool-outputs": "PRINT_OUTPUT=true vitest run tests/tool-outputs/"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.15",
		"@ai-sdk/google": "^3.0.16",
		"@ai-sdk/mistral": "^3.0.13",
		"@ai-sdk/openai": "^3.0.1",
		"@duckdb/node-api": "^1.4.4-r.1",
		"@fastify/formbody": "^8.0.2",
		"@fastify/static": "^8.1.0",
		"@nao/shared": "*",
		"@openrouter/ai-sdk-provider": "^2.2.3",
		"@pydantic/monty": "^0.0.4",
		"@slack/web-api": "^7.13.0",
		"@trpc/server": "^11.8.1",
		"@types/nodemailer": "^7.0.9",
		"@vscode/ripgrep": "^1.17.0",
		"ai": "^6.0.42",
		"better-auth": "^1.4.10",
		"better-sqlite3": "^12.5.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"drizzle-query-logger": "^1.1.2",
		"fastify": "^5.6.2",
		"fastify-plugin": "^5.1.0",
		"fastify-raw-body": "^5.0.0",
		"fastify-type-provider-zod": "^6.1.0",
		"gray-matter": "^4.0.3",
		"mcporter": "^0.7.3",
		"minimatch": "^10.1.1",
		"nodemailer": "^7.0.13",
		"pg": "^8.16.3",
		"postgres": "^3.4.8",
		"posthog-node": "^5.21.2",
		"prompt-mentions": "^0.0.32",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"superjson": "^2.2.6",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"@types/pg": "^8.16.0",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.18.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"pino-pretty": "^13.1.3",
		"tsup": "^8.5.1",
		"typescript-eslint": "^8.21.0",
		"vitest": "^4.0.16"
	}
}
